@model CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<form method="post">
    <div class="container">
        <div class="alert alert-primary">
            Yeni Ürün Ekleme
        </div>
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Fotoğraf</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
        <br />
        <label>Stok</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>